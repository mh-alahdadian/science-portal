{
  "openapi": "3.0.1",
  "info": {
    "title": "OpenAPI definition",
    "version": "v0"
  },
  "servers": [
    {
      "url": "http://192.168.59.20:8383/file-manager/api",
      "description": "Generated server url"
    }
  ],
  "tags": [
    {
      "name": "file manager",
      "description": "The file API. Contains get and upload file."
    }
  ],
  "paths": {
    "/v1/files": {
      "post": {
        "tags": ["file manager"],
        "summary": "Upload a File",
        "operationId": "fileUpload",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UploadRequestDTO"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/FileResponseDTO"
                }
              }
            }
          }
        },
        "security": [
          {
            "Bearer Authentication": []
          }
        ]
      }
    },
    "/v1/files/link": {
      "get": {
        "tags": ["file manager"],
        "summary": "get Files link",
        "operationId": "fileLink",
        "parameters": [
          {
            "name": "modelTypeId",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          },
          {
            "name": "modelId",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/DownloadResponseDTO"
                }
              }
            }
          }
        },
        "security": [
          {
            "Bearer Authentication": []
          }
        ]
      }
    },
    "/v1/files/download/{uuid}": {
      "get": {
        "tags": ["file manager"],
        "summary": "get File stream",
        "operationId": "downloadFile",
        "parameters": [
          {
            "name": "uuid",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "key",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              }
            }
          }
        },
        "security": [
          {
            "Bearer Authentication": []
          }
        ]
      }
    }
  },
  "components": {
    "schemas": {
      "UploadRequestDTO": {
        "required": ["file", "modelTypeId"],
        "type": "object",
        "properties": {
          "modelTypeId": {
            "type": "integer",
            "format": "int32"
          },
          "scopeId": {
            "type": "integer",
            "format": "int32"
          },
          "modelId": {
            "type": "integer",
            "format": "int64"
          },
          "userId": {
            "type": "integer",
            "format": "int64",
            "readOnly": true
          },
          "file": {
            "type": "string",
            "format": "binary"
          }
        }
      },
      "FileResponseDTO": {
        "type": "object",
        "properties": {
          "url": {
            "type": "string"
          },
          "fileName": {
            "type": "string"
          },
          "contentType": {
            "type": "string"
          },
          "fileSize": {
            "type": "integer",
            "format": "int64"
          },
          "createdTime": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "DownloadResponseDTO": {
        "type": "object",
        "properties": {
          "modelTypeId": {
            "type": "integer",
            "format": "int32"
          },
          "modelId": {
            "type": "integer",
            "format": "int64"
          },
          "title": {
            "type": "string"
          },
          "modelType": {
            "type": "string"
          },
          "links": {
            "type": "array",
            "readOnly": true,
            "items": {
              "$ref": "#/components/schemas/LinkDTO"
            }
          }
        }
      },
      "LinkDTO": {
        "type": "object",
        "properties": {
          "address": {
            "type": "string"
          },
          "contentType": {
            "type": "string"
          },
          "uniqueID": {
            "type": "string"
          }
        }
      }
    },
    "securitySchemes": {
      "Bearer Authentication": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
