      "ReplyCommentDTO": {
        "required": ["text"],
        "type": "object",
        "properties": {
          "text": {
            "type": "string"
          },
          "userId": {
            "type": "integer",
            "format": "int64",
            "readOnly": true
          },
          "userName": {
            "type": "string",
            "readOnly": true
          },
          "userImage": {
            "type": "string",
            "readOnly": true
          }
        }
      },
      "RequestDTO": {
        "required": ["modelId", "modelTypeId"],
        "type": "object",
        "properties": {
          "modelTypeId": {
            "type": "integer",
            "format": "int32"
          },
          "modelId": {
            "type": "integer",
            "format": "int64"
          },
          "userId": {
            "type": "integer",
            "format": "int64",
            "readOnly": true
          }
        }
      },
      "ReactionResponseDTO": {
        "type": "object",
        "properties": {
          "count": {
            "type": "integer",
            "format": "int64"
          },
          "userReacted": {
            "type": "boolean"
          }
        },
        "required": ["count", "userReacted"]
      },
      "RatingResponseDTO": {
        "type": "object",
        "properties": {
          "average": {
            "type": "number",
            "format": "double"
          },
          "total": {
            "type": "integer",
            "format": "int64"
          },
          "userScore": {
            "type": "integer",
            "format": "int32"
          },
          "result": {
            "type": "object",
            "additionalProperties": {
              "$ref": "#/components/schemas/Result"
            }
          }
        }
      },
