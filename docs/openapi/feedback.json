        "type": "object",
        "properties": {
          "empty": {
            "type": "boolean"
          },
          "sorted": {
            "type": "boolean"
          },
          "unsorted": {
            "type": "boolean"
          }
        }
      },
      "FeedbackStatsDTO": {
        "type": "object",
        "properties": {
          "modelType": {
            "type": "integer",
            "format": "int32"
          },
          "modelId": {
            "type": "integer",
            "format": "int64"
          },
          "commentCount": {
            "type": "integer",
            "format": "int64"
          },
          "rating": {
            "$ref": "#/components/schemas/RatingResponseDTO"
          },
          "reaction": {
            "type": "object",
            "additionalProperties": {
