        "type": "object",
        "properties": {
          "modelTypeId": {
            "type": "integer",
            "format": "int32"
          },
          "modelId": {
            "type": "integer",
            "format": "int64"
          },
          "scopeId": {
            "type": "integer",
            "format": "int32"
          },
          "publish": {
            "type": "boolean"
          },
          "from": {
            "type": "string"
          },
          "to": {
            "type": "string"
          }
        }
      },
      "Pageable": {
        "type": "object",
        "properties": {
          "page": {
            "minimum": 0,
            "type": "integer",
            "format": "int32"
          },
          "size": {
            "minimum": 1,
            "type": "integer",
            "format": "int32"
          },
          "sort": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "CommentResponseDTO": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "text": {
            "type": "string"
          },
          "userName": {
            "type": "string"
          },
          "userImage": {
            "type": "string"
          },
          "fileKey": {
            "type": "string"
          },
          "modelType": {
            "$ref": "#/components/schemas/ModelTypeEntity"
          },
          "modelId": {
            "type": "integer",
            "format": "int64"
          },
          "publish": {
            "type": "boolean"
          },
          "unPublishReason": {
            "type": "string"
          },
          "publishAt": {
            "type": "string",
            "format": "date-time"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          },
          "reaction": {
            "type": "object",
            "additionalProperties": {
              "$ref": "#/components/schemas/ReactionResponseDTO"
            }
          }
        }
      },
