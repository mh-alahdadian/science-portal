          "scopeId": {
            "type": "integer",
            "format": "int32"
          },
          "userId": {
            "type": "integer",
            "format": "int64",
            "readOnly": true
          },
          "userName": {
            "type": "string",
            "readOnly": true
          },
          "userImage": {
            "type": "string",
            "readOnly": true
          }
