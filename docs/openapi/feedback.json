  "components": {
    "schemas": {
      "ReactionDTO": {
        "required": ["modelId", "modelTypeId", "type"],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32",
            "readOnly": true
          },
          "userId": {
            "type": "integer",
            "format": "int64",
            "readOnly": true
          },
          "ipAddress": {
            "type": "string",
            "readOnly": true
          },
          "modelTypeId": {
            "type": "integer",
            "format": "int32"
          },
          "modelId": {
            "type": "integer",
            "format": "int64"
          },
          "type": {
            "type": "string",
            "enum": ["LIKE", "DISLIKE"]
          },
          "delete": {
            "type": "boolean"
          }
        }
      },
      "ResponseDTO": {
        "type": "object",
        "properties": {
          "code": {
            "type": "integer",
