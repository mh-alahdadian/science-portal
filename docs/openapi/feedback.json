          "modelTypeId": {
            "type": "integer",
            "format": "int32"
          },
          "modelId": {
            "type": "integer",
            "format": "int64"
          },
          "score": {
            "maximum": 5,
            "minimum": 1,
            "type": "integer",
            "format": "int32"
          },
          "userId": {
            "type": "integer",
            "format": "int64",
            "readOnly": true
          },
          "ipAddress": {
            "type": "string",
            "readOnly": true
          }
